# Banco de dados (MySQL do Railway)
DB_HOST=
DB_PORT=3306
DB_NAME=espocrm
DB_USER=
DB_PASS=

# URL pública do serviço (opcional, só referência)
APP_URL=

# (Opcional) Auto-instalação do EspoCRM via envs ESPOCRM_*
# Se você preencher tudo abaixo, o wizard pula:
ESPOCRM_DATABASE_PLATFORM=Mysql
ESPOCRM_DATABASE_HOST=${DB_HOST}
ESPOCRM_DATABASE_PORT=${DB_PORT}
ESPOCRM_DATABASE_NAME=${DB_NAME}
ESPOCRM_DATABASE_USER=${DB_USER}
ESPOCRM_DATABASE_PASSWORD=${DB_PASS}
ESPOCRM_ADMIN_USERNAME=admin
ESPOCRM_ADMIN_PASSWORD=TroqueEstaSenhaForte
# Coloque a URL pública do Railway (https://seu-subdominio.up.railway.app)
ESPOCRM_SITE_URL=

# Localização (opcional)
ESPOCRM_LANGUAGE=pt_BR
ESPOCRM_TIME_ZONE=America/Sao_Paulo
